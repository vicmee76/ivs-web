<MudPaper Width="" Elevation="0" Style="font-size:12px; font-weight:bold" Class="py-2">
    <MudNavMenu Color="Color.Secondary" Margin="Margin.Normal"  Bordered="true">

        <MudNavLink Href="/home" Style="font-weight:bold">Home</MudNavLink>

        <MudNavLink Href="/events/discovery">Discovery</MudNavLink>

        <AuthorizeView Roles="User,Admin">
            <Authorized>
                <MudNavLink Href="/events/dashboard">Dashboard</MudNavLink>

                <MudNavGroup Title="Events" Icon="" Expanded="false" Class="">
                    <MudNavLink Href="/events/create-event">Create Event</MudNavLink>
                    <MudNavLink Href="/events/my-events">My Event</MudNavLink>
                </MudNavGroup>

                <MudNavLink Href="/user/profile">My Profile</MudNavLink>
            </Authorized>
            <NotAuthorized>
                <MudNavLink Href="/accounts/login">Login</MudNavLink>

                <MudNavLink Href="/accounts/signup">Sign up</MudNavLink>
            </NotAuthorized>
        </AuthorizeView>
        
        <AuthorizeView Roles="Admin">
            <Authorized>
                <MudNavGroup Title="Configurations" Icon="" Expanded="false" Class="">
                    <MudNavLink Href="/events/create-event">Users</MudNavLink>
                    <MudNavLink Href="/events/my-events">Events</MudNavLink>
                    <MudNavLink Href="/events/my-events">Organizations</MudNavLink>
                    <MudNavLink Href="/events/my-events">Event Types</MudNavLink>
                    <MudNavLink Href="/events/my-events">Payment Options</MudNavLink>
                    <MudNavLink Href="/events/my-events">Event Sales</MudNavLink>
                    <MudNavLink Href="/events/my-events">My Revenues</MudNavLink>
                </MudNavGroup>
            </Authorized>
        </AuthorizeView>

        <MudNavLink Href="/about-us">About Us</MudNavLink>

        <MudNavLink Href="/contact-us">Contact Us</MudNavLink>

        <MudNavLink Href="/faq">FAQ</MudNavLink>

        <AuthorizeView>
            <Authorized>
                <MudNavLink OnClick="ActionLogOut">Log out </MudNavLink>
            </Authorized>
        </AuthorizeView>
          
    </MudNavMenu>
</MudPaper>



@code{


    [Inject] NavigationManager? _navigate { get; set; }
    [Inject] ILocalStorageService _localStorageService { get; set; }
    [Inject] AuthenticationStateProvider _authStateProvider { get; set; }

    private async Task ActionLogOut()
    {
        await _localStorageService.ClearAsync();
        await _authStateProvider.GetAuthenticationStateAsync();
        _navigate.NavigateTo("/", true);
    }

}